{
	"$schema": "http://json.schemastore.org/template",
	"author": "Andreas Müller",
	"classifications": [
		"C#",
		"Repository",
		"Amusoft"
	],
	"identity": "Amusoft.Templates.GithubAction.Dotnet",
	"name": "GitHub action using C#",
	"shortName": "github-action-dotnet",
	"sourceName": "MyConsoleApp",
	"preferNameDirectory": false,
	"tags": {
		"language": "C#",
		"type": "project"
	},
	"symbols": {
		"ActionName": {
			"type": "parameter",
			"description": "Name of the action",
			"replaces": "ACTIONNAME",
			"isRequired": true
		},
		"MaintainerEmail": {
			"type": "parameter",
			"description": "Mainer email address e.g. 'DisplayName <mail@domain.com>'",
			"replaces": "MAINTAINEREMAIL",
			"isRequired": true
		},
		"GitProjectName": {
			"type": "parameter",
			"description": "name of repository project",
			"replaces": "GITPROJECT",
			"isRequired": true
		},
		"GitUser": {
			"type": "parameter",
			"description": "name of repository user",
			"replaces": "GITOWNER",
			"isRequired": true
		},
		"RootBranchName": {
			"type": "parameter",
			"description": "Name of root branch to listen for changes",
			"defaultValue": "main",
			"replaces": "BRANCHTRIGGER"
		},
		"IncludeTests": {
			"type": "parameter",
			"datatype": "bool",
			"defaultValue": "true"
		},
		"currentYearGenerated": {
			"type": "generated",
			"generator": "now",
			"parameters": {
				"format": "yyyy"
			},
			"replaces": "CURRENTYEAR"
		}
	},
	"sources": [
		{
			"modifiers": [
				{
					"condition": "(!IncludeTests)",
					"exclude": [
						"MyConsoleApp.UnitTests/**/*",
						"MyConsoleApp.IntegrationTests/**/*"
					]
				},
				{
					"exclude": [
						"**/.idea/**/*",
						"**/.vs/**/*"
					]
				}
			]
		}
	]
}
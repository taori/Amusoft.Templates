{
  "$schema": "http://json.schemastore.org/template",
  "author": "Andreas Müller",
  "classifications": [
    "C#",
    "Roslyn",
    "Amusoft"
  ],
  "identity": "Amusoft.Templates.Roslyn.AnalyzerRepository",
  "name": "roslyn repository to host multiple analyzer packages",
  "shortName": "roslyn-repository",
  "sourceName": "MyRoslynRepository",
  "preferNameDirectory": false,
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "symbols": {
    "currentYearGenerated": {
      "type": "generated",
      "generator": "now",
      "parameters": {
        "format": "yyyy"
      },
      "replaces": "CURRENTYEAR"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            "**/.idea/**/*",
            "**/.vs/**/*"
          ]
        }
      ]
    }
  ]
}
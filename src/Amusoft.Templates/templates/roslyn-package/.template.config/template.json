{
  "$schema": "http://json.schemastore.org/template",
  "author": "Andreas Müller",
  "classifications": [
    "C#",
    "Roslyn",
    "Amusoft"
  ],
  "identity": "Amusoft.Templates.Roslyn.AnalyzerPackage",
  "name": "roslyn package with vsix, test and debug sample setup",
  "shortName": "roslyn-package",
  "sourceName": "MyRoslynPackage",
  "preferNameDirectory": false,
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "symbols": {
    "GitUser": {
      "type": "parameter",
      "description": "name of repository owner",
      "replaces": "GITOWNER",
      "isRequired": true
    },
    "GitRepository": {
      "type": "parameter",
      "description": "name of repository",
      "replaces": "GITPROJECT",
      "isRequired": true
    },
    "PackageName": {
      "type": "parameter",
      "description": "name of package",
      "replaces": "PACKAGENAME",
      "isRequired": true
    },
    "Author": {
      "type": "parameter",
      "description": "Name of project author",
      "defaultValue": "John Doe",
      "replaces": "AUTHOR",
      "isRequired": true
    },
    "currentYearGenerated": {
      "type": "generated",
      "generator": "now",
      "parameters": {
        "format": "yyyy"
      },
      "replaces": "CURRENTYEAR"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            "**/.idea/**/*",
            "**/.vs/**/*"
          ]
        }
      ]
    }
  ]
}